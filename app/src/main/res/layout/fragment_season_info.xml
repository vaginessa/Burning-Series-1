<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="to.bs.bruningseriesmeterial.fragments.SeasonInfo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/season_image"
                android:layout_width="180dp"
                android:layout_height="264dp"
                android:layout_marginLeft="90dp"
                android:elevation="0dp"
                app:srcCompat="@drawable/background_selector" />

            <TextView
                android:id="@+id/Genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Produktionsjahre"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="fill"
                android:layout_toEndOf="@+id/season_image"
                android:layout_toRightOf="@+id/season_image"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Produktionsjahre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Hauptdarsteller"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="fill"
                android:layout_toEndOf="@+id/season_image"
                android:layout_toRightOf="@+id/season_image"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/Hauptdarsteller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Produzenten"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="fill"
                android:layout_toEndOf="@+id/season_image"
                android:layout_toRightOf="@+id/season_image"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/Produzenten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Regisseure"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="fill"
                android:layout_toEndOf="@+id/season_image"
                android:layout_toRightOf="@+id/season_image"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/Regisseure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Autoren"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="fill"
                android:layout_toEndOf="@+id/season_image"
                android:layout_toRightOf="@+id/season_image"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/Autoren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/season_image"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="fill"
                android:layout_toRightOf="@+id/season_image"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/stroy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/season_image"
                android:layout_gravity="fill"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
