<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/towatch_card"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="16dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_marginRight="10dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/towatch_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/season_example_text" />

        <CheckBox
            android:id="@+id/towatch_watched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:text="Gesehen" />

        <ProgressBar
            android:id="@+id/towatch_seasoncomplete"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/towatch_watched"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/towatch_watched"
            android:progress="50"
            android:progressTint="@color/colorPrimary" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
